{
  "private": true,
  "sideEffects": false,
  "name": "@all-track/remix",
  "scripts": {
    "publish": "wrangler publish --no-bundle",
    "build": "remix build",
    "dev:remix": "remix watch",
    "dev:api": "pnpm --prefix ../api dev:api",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "lint": "eslint *.ts*",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "pnpm typecheck --watch"
  },
  "dependencies": {
    "@all-track/currencies": "workspace:*",
    "@all-track/trpc": "workspace:*",
    "@all-track/validation": "workspace:*",
    "@cloudflare/kv-asset-handler": "^0.3.0",
    "@radix-ui/react-icons": "^1.1.1",
    "@radix-ui/react-label": "^2.0.0",
    "@radix-ui/react-select": "^1.2.0",
    "@radix-ui/react-slot": "^1.0.1",
    "@remix-run/cloudflare": "^1.13.0",
    "@remix-run/react": "^1.13.0",
    "@remix-run/server-runtime": "^1.13.0",
    "@remix-validated-form/with-zod": "^2.0.5",
    "@trpc/client": "^10.12.0",
    "@trpc/server": "^10.12.0",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "isbot": "^3.6.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-github": "^1.3.0",
    "remix-auth-google": "^1.2.0",
    "remix-utils": "^6.0.0",
    "remix-validated-form": "^4.6.9",
    "zod": "^3.20.6",
    "zod-form-data": "^2.0.0",
    "zustand": "^4.3.3"
  },
  "devDependencies": {
    "@all-track/tsconfig": "workspace:*",
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "1.13.0",
    "@remix-run/eslint-config": "1.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.34.0",
    "eslint-config-custom": "workspace:*",
    "miniflare": "^2.12.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.9.5",
    "wrangler": "^2.11.0"
  },
  "engines": {
    "node": ">=16.13"
  }
}
