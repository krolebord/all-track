{
  "private": true,
  "sideEffects": false,
  "name": "@all-track/remix",
  "scripts": {
    "publish": "wrangler publish --no-bundle",
    "build": "remix build",
    "dev:remix": "remix watch",
    "dev:api": "pnpm --prefix ../api dev:api",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "lint": "eslint *.ts*",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@all-track/trpc": "workspace:*",
    "@all-track/ui": "workspace:*",
    "@remix-run/cloudflare": "1.13.0-pre.2",
    "@remix-run/cloudflare-workers": "1.13.0-pre.2",
    "@remix-run/react": "1.13.0-pre.2",
    "@remix-run/server-runtime": "1.13.0-pre.2",
    "@trpc/client": "^10.11.0",
    "@trpc/server": "^10.11.0",
    "cross-env": "^7.0.3",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-github": "^1.3.0",
    "remix-auth-google": "^1.2.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@all-track/tsconfig": "workspace:*",
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "1.13.0-pre.2",
    "@remix-run/eslint-config": "1.13.0-pre.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "eslint": "^8.34.0",
    "eslint-config-custom": "workspace:*",
    "miniflare": "^2.11.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.5",
    "wrangler": "^2.9.1"
  },
  "engines": {
    "node": ">=16.13"
  }
}
