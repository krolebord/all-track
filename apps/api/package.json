{
  "name": "@all-track/api",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "module": "./build/index.mjs",
  "scripts": {
    "publish": "wrangler publish --no-bundle",
    "build": "esbuild index.ts --bundle --format=esm --platform=neutral --main-fields=module,main,browser --outfile=build/index.mjs --minify",
    "dev:api": "esbuild index.ts --bundle --format=esm --platform=neutral --main-fields=module,main,browser --outfile=build/index.mjs --sourcemap --watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.mjs --watch",
    "dev": "pnpm build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=development miniflare ./build/index.mjs"
  },
  "dependencies": {
    "@all-track/trpc": "workspace:*",
    "@trpc/server": "^10.11.0",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@all-track/tsconfig": "workspace:*",
    "@cloudflare/workers-types": "^3.18.0",
    "esbuild": "^0.17.7",
    "eslint": "^8.34.0",
    "eslint-config-custom": "workspace:*",
    "miniflare": "^2.11.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.5",
    "wrangler": "^2.9.1"
  },
  "license": "ISC"
}
